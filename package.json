{
  "scripts": {
    "clean": "rimraf js",
    "lint": "npx eslint . --ext .ts",
    "lint:fix": "npx eslint . --ext .ts --fix",
    "format": "npx prettier --write \"typescript/**/*.{ts,js,json,html,css}\"",
    "format:check": "npx prettier --check \"typescript/**/*.{ts,js,json,html,css}\"",
    "check": "npm run lint && npm run format:check",
    "build": "npx tsc"
  },
  "devDependencies": {
    "@types/d3": "^7.4.3",
    "@typescript-eslint/eslint-plugin": "^8.42.0",
    "@typescript-eslint/parser": "^8.42.0",
    "eslint": "^9.34.0",
    "eslint-config-prettier": "^10.1.8",
    "prettier": "^3.6.2",
    "rimraf": "^6.0.1",
    "typescript": "^5.9.2"
  }
}
